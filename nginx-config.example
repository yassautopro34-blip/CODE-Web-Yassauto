# Nginx Configuration - Reverse Proxy pour YassAuto API
# Fichier: /etc/nginx/sites-available/yassauto-api
#
# Installation:
#   1. Créer ce fichier: sudo nano /etc/nginx/sites-available/yassauto-api
#   2. Copier le contenu ci-dessous
#   3. Créer le lien: sudo ln -s /etc/nginx/sites-available/yassauto-api /etc/nginx/sites-enabled/
#   4. Tester: sudo nginx -t
#   5. Recharger: sudo systemctl reload nginx

# Serveur upstream (Node.js)
upstream yassauto_backend {
    server localhost:4000;
    keepalive 64;
}

# Redirection HTTP vers HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name api.yassauto.fr;
    
    # Rediriger tout le trafic HTTP vers HTTPS
    return 301 https://$server_name$request_uri;
}

# Serveur HTTPS principal
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name api.yassauto.fr;

    # ===== CERTIFICAT SSL/TLS =====
    # Généré avec Let's Encrypt
    # Installer: sudo apt-get install certbot python3-certbot-nginx
    # Créer: sudo certbot certonly --nginx -d api.yassauto.fr
    ssl_certificate /etc/letsencrypt/live/api.yassauto.fr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.yassauto.fr/privkey.pem;

    # ===== SECURITE SSL =====
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5:!3DES;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_session_tickets off;
    ssl_stapling on;
    ssl_stapling_verify on;

    # ===== HEADERS DE SECURITE =====
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # ===== LOGS =====
    access_log /var/log/nginx/yassauto-api-access.log combined buffer=32k;
    error_log /var/log/nginx/yassauto-api-error.log warn;

    # ===== GESTION DE TAILLE DE FICHIER =====
    client_max_body_size 10M;

    # ===== REVERSE PROXY VERS NODE =====
    location / {
        proxy_pass http://yassauto_backend;
        
        # Version HTTP et upgrades
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Headers pour le serveur backend
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Cache bypass
        proxy_cache_bypass $http_upgrade;
        proxy_no_cache $http_pragma $http_authorization;
    }

    # ===== WEBHOOK STRIPE (endpoint spécial) =====
    # Le webhook Stripe a besoin du body brut non-bufferisé
    location /webhook/stripe {
        proxy_pass http://yassauto_backend;
        
        # Importante pour Stripe: ne pas buffeuriser le body
        proxy_request_buffering off;
        client_max_body_size 0;
        
        # HTTP version et headers
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # ===== SANTE SERVEUR =====
    location /health {
        proxy_pass http://yassauto_backend;
        proxy_http_version 1.1;
        access_log off;
    }

    # ===== REJET DES FICHIERS SENSIBLES =====
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# ===== OPTIONNEL: Alias pour le même domaine =====
# Si vous avez deux domaines différents, you pouvez les écouter tous les deux
# Exemple: api.yassauto.fr ET www.yassauto.fr/api

